        {% if p.group == page.group %}
            <li class="active"><a href="{{ p.url }}">{{ game_title }}</a></li>
        {% else %}
            <li><a href="{{ p.url }}">{{ game_title }}</a></li>
        {% endif %}
    {% endif %}
{% endfor %}

