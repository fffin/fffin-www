                <ul>
        {% for p in site.pages %}
            {% if p.group == game_code %}
                {% if p.url == page.url %}
                    <li class="active"><a href="{{ p.url }}">{{ p.title }}</a></li>
                {% else %}
                    <li><a href="{{ p.url }}">{{ p.title }}</a></li>
                {% endif %}
            {% endif %}
        {% endfor %}
                </ul>
            </li>
{% endif %}

